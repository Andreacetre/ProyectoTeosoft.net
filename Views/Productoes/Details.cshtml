@model TeoSoft.Models.Producto

@{
    ViewData["Title"] = "Detalles de Producto";
}

<h1 class="text-center"><i class="fas fa-info-circle"></i> Detalles de Producto</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CodigoDeBarra)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CodigoDeBarra)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Precio)</dt>
                    <dd class="col-sm-8">@String.Format("{0:N0}", Model.Precio)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Stock)</dt>
                    <dd class="col-sm-8">@String.Format("{0:N0}", Model.Stock)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IVA)</dt>
                    <dd class="col-sm-8">@String.Format("{0:N0}", Model.IVA)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaVencimiento)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaVencimiento)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SinVencimiento)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SinVencimiento)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estado)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CategoriaProducto)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoriaProducto.Nombre)</dd>
                </dl>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Edit" asp-route-id="@Model.ProductoId" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>
</div>